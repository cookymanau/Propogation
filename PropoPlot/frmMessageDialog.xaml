<Window x:Class="PropoPlot.frmMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropoPlot"
        mc:Ignorable="d"
        Title="frmMessageDialog" Height="450" Width="800">
    <Border Margin="10">
        
    <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Messaging" Background="#ccc"/>
            <TextBox Grid.Row="1" Text="blah1" Name="messageBoxUpper"/> 
            <TextBox Grid.Row="2" Text="blah1" Name="messageBoxLower"/>
            <TextBlock Text="The Program should still be going"  Grid.Row="3" Background="#ccc"/>
        </Grid>
    </Border>
</Window>
